<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Products</title>

  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/products">MyStore</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="nav">
      <ul class="navbar-nav ms-auto">

        

      </ul>
    </div>
  </div>
</nav>

<!-- HERO -->
<section class="bg-light py-5 text-center">
  <div class="container">
    <h1 class="fw-bold">Our Products</h1>
    <p class="text-muted">Find the best product for you</p>
  </div>
</section>

<!-- PRODUCT LIST -->
<div class="container my-5">
  <div class="row">

    <% products.forEach(product => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">

          <img
            src="<%= product.imageUrl || 'https://via.placeholder.com/400x300' %>"
            class="card-img-top"
            style="height: 200px; object-fit: cover;"
          >

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text text-muted small">
              <%= product.description %>
            </p>

            <p class="fw-bold mt-auto">
              Rp <%= product.price.toLocaleString('id-ID') %>
            </p>

            <!-- ACTION BUTTON -->
            <% if (!session.userId) { %>
              <a href="/login" class="btn btn-outline-primary w-100">
                Login to Buy
              </a>

            <% } else if (session.role === 'user') { %>
              <a href="/purchase/<%= product.id %>" class="btn btn-primary w-100">
                Buy
              </a>

            <% } else if (session.role === 'admin') { %>
              <div class="d-flex gap-2">
                <a href="/products/<%= product.id %>/edit" class="btn btn-warning w-50">
                  Edit
                </a>
                <a href="/products/<%= product.id %>/delete"
                   class="btn btn-danger w-50"
                   onclick="return confirm('Delete this product?')">
                  Delete
                </a>
              </div>
            <% } %>

          </div>
        </div>
      </div>
    <% }) %>

  </div>
</div>

<!-- FOOTER -->
<footer class="bg-dark text-light py-3 text-center">
  <small>&copy; 2026 MyStore</small>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
